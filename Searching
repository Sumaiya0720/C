//Linear Search
#include<stdio.h>
int main()
{
int n , i , a[50] , num , flag=0;
printf("Enter the number of Element in Array:");
scanf("%d" , &n);
for (i=1;i<=n;i++)
{
printf("Enter %d element " , i);
scanf("%d" , &a[i]);
}
printf(0"Enter number you want to search :");
scanf("%d" , &num);
for(i=0;i<n;i++)
{
if(num==a[i])
{
printf("%d is found at %d" ,num , i);
flag=1;
}
}
if(flag==0)
{
printf("Number not found");
}
}
